<% provide(:title, 'Home') %>

<div class="d-flex justify-content-center bg-info bg-opacity-25" 
    style="padding:200px; margin-top:10px; margin-bottom:10px">
    <h1 id="welcome">Welcome to ShopeKart</h1>
</div>

<div class="card-container">
    <% @products.each do |product| %>
        <div class="card">
            <div class="card-body">
                <h1><%= product.name %></h1>
                <p class="price"><%= product.price %> Rs</p>
                <p><%= product.description %></p>
            </div>
            <div class="card-footer text-muted">
                    <%= button_to "Add +", cart_items_path, 
                        params: {  product: product, 
                                name: product.name, 
                                description: product.description 
                                } %> 
            </div>
        </div>
    <% end %>
</div>
<div class="pagination">
    <%= will_paginate @products, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
<% provide(:title, 'Log In') %>
<h1>Log In</h1>

<div>
    <%= form_with(url: login_path, scope: :session, local:true) do |form| %>
        <div>
            <%= form.label :email %>
            <%= form.text_field :email %>
        </div>

        <div>   
            <%= form.label :password %>
            <%= form.password_field :password %>
        </div>

        <div>
            <%= form.submit "Log In" %>
        </div>
    <% end %>
    <p>New User?<%= link_to "Sign up now!", new_user_path %></p>
</div>

<% provide(:title, 'All Roles') %>

<h1 id="welcome">All Roles</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-10 mx-md-auto">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="roleTable">
                    <% @roles.each do |role| %>
                        <%= render 'role_row', role: role %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
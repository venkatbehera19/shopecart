<div id="<%= dom_id product %>" class="card" style="width:300px">
  <div class="card-body">
    <h1><%= product.name %></h1>
    <p class="price"><%= product.price %> Rs</p>
    <p><%= product.description %></p>
  </div>
  <div class="card-footer text-muted">
      <%= button_to "Add To Cart", cart_items_path, 
                  params: {  product: product, 
                             name: product.name, 
                             description: product.description 
                          } %>
      <% if is_admin? %>
        <%= link_to "Delete", product, method: :delete, remote: true, class: 'btn btn-danger' %>
      <% end %>
  </div>
</div>

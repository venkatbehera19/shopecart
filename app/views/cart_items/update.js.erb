<% if log_in? %>
  $('#item<%= @cart.id %>').replaceWith("<%= escape_javascript render('items', all_cart_item: @cart) %>")
  $('#total_money').replaceWith("<%= escape_javascript render('total', cart_items: @cart_items) %>")
<% else %>
  $('#item<%= @cart['id'] %>').replaceWith("<%= escape_javascript render('items', all_cart_item: @cart) %>")
  $('#total_money').replaceWith("<%= escape_javascript render('total', cart_items: @cart_items) %>")
<% end %>